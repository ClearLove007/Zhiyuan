<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zhiyuan.mapper.LiKe1Mapper">

	<!-- 查询所有理科一本学校 -->
	<select id="findAll" resultType="LiKe1">
		select * from like1
	</select>

	<!-- 查询符合条件的理科一本学校 -->
	<select id="findLiKe1School" resultType="Result">
		select count,`change`,hard,pid,name,xiancha1,xiancha2,averxiancha,xishu1,xishu2,averxishu,weici1,weici2,averweici,xiancha3,xiancha4,xishu3,xishu4,weici3,weici4 
		from like1 
		where averxiancha &lt; #{xiancha}
	</select>
	
	<!-- 查询符合条件的理科一本学校的四年情况 -->
	<select id="findHelp" resultType="Help">
		select xiancha1,xiancha2,xiancha3,xiancha4,xishu1,xishu2,xishu3,xishu4,weici1,weici2,weici3,weici4 
		from like1 
		where averxiancha &lt; (#{xiancha}+5) and averxiancha &gt; (#{xiancha}-50)
	</select>
</mapper>