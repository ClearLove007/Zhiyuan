<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zhiyuan.mapper.WenKe1Mapper">

	<!-- 查询所有文科一本学校 -->
	<select id="findAll" resultType="LiKe1">
		select * from wenke1
	</select>

	<!-- 查询符合条件的文科一本学校 -->
	<select id="findWenKe1School" resultType="Result">
		select count,`change`,hard,pid,name,xiancha1,xiancha2,averxiancha,xishu1,xishu2,averxishu,weici1,weici2,averweici,xiancha3,xiancha4,xishu3,xishu4,weici3,weici4 
		from wenke1 
		where averxiancha &lt; (#{xiancha}+5) and averxiancha &gt; (#{xiancha}-30)
		order by averweici
	</select>
	
</mapper>